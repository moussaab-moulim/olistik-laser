{
    "name": "olistik-laser",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"yarn:next:dev\" \"yarn:slicemachine\" --names \"next,slicemachine\" --prefix-colors blue,magenta",
        "next:dev": "next",
        "build": "next build",
        "start": "next start",
        "svgr": "npx @svgr/cli -d src/components/icons --ignore-existing --icon --typescript public/icons",
        "build:analyze": "ANALYZE=true npm run build",
        "apollo:download-schema": "apollo client:download-schema schema.graphql",
        "apollo:generate-types": "rm -rf __generated__ && apollo client:codegen --target typescript --outputFlat",
        "apollo:sync": "npm run apollo:download-schema && npm run apollo:generate-types",
        "codegen:generate": "graphql-codegen",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
        "slicemachine": "start-slicemachine",
        "codegen": "graphql-codegen --config codegen.yml -r dotenv/config"
    },
    "dependencies": {
        "@apollo/client": "^3.3.7",
        "@chakra-ui/icons": "^2.0.11",
        "@chakra-ui/react": "^2.3.5",
        "@emotion/react": "^11",
        "@emotion/styled": "^11",
        "@next/bundle-analyzer": "^10.0.5",
        "@prismicio/client": "^6.7.1",
        "@prismicio/helpers": "^2.3.5",
        "@prismicio/next": "^0.1.5",
        "@prismicio/react": "^2.5.0",
        "@prismicio/slice-simulator-react": "^0.2.2",
        "apollo-cache-inmemory": "^1.6.6",
        "apollo-link-prismic": "^1.1.1",
        "dotenv": "^16.0.3",
        "framer-motion": "^6",
        "graphql": "^16.6.0",
        "graphql-request": "^3.4.0",
        "graphql-tag": "^2.12.6",
        "next": "^12.1.6",
        "next-compose-plugins": "^2.2.1",
        "next-i18next": "^12.1.0",
        "next-seo": "^5.5.0",
        "nuka-carousel": "^5.4.0",
        "prettier": "^2.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.4.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.13.4",
        "@graphql-codegen/introspection": "^2.2.1",
        "@graphql-codegen/typescript": "^2.7.3",
        "@graphql-codegen/typescript-operations": "^2.5.3",
        "@graphql-codegen/typescript-react-apollo": "^3.3.3",
        "@prismicio/types": "^0.2.3",
        "@svgr/cli": "^5.5.0",
        "@types/next-seo": "^2.1.2",
        "@types/node": "^14.14.13",
        "@types/nuka-carousel": "^4.4.6",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "apollo": "^2.32.1",
        "concurrently": "^7.4.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.2.0",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "prismic-ts-codegen": "^0.1.5",
        "slice-machine-ui": "^0.5.0",
        "typescript": "^4.1.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint -- --quiet --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
